				"annotations": [],
				"type": "RestService",
				"typeProperties": {
					"url": "https://api.eventive.org/",
					"enableServerCertificateValidation": true,
					"authenticationType": "Basic",
					"userName": "dd67a9b5637524a10ef8934566db6abc",
					"password": {
						"type": "SecureString",
						"value": "**********"
					}
